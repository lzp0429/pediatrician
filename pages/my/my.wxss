/* pages/my/my.wxss */
.top-view{

  height: 250rpx;
  background: #4FA7FF;
  display: flex;
  flex-wrap: nowrap;
  padding-top: 100rpx;
  color: #FFFFFF;
}
.top-img{
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
}
.top-img>image{
  width: 100%;
  height: 100%;
}
.phone{
  width: 20rpx;
  height: 25rpx;
  
}
.phone>image{
  width: 100%;
  height: 100%;
}
.top-phone{
  display: flex;
  flex-wrap: nowrap;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.center-view{
  width: 200rpx;
  height: 150rpx;
  padding-top: 25rpx;
  padding-left: 40rpx;
}
.right-view{
  width: 140rpx;
  height: 45rpx;
  border-radius: 25rpx;
  border:  1rpx solid #ffffff;
  margin-left: 120rpx;
  margin-top: 40rpx;
  display: flex;
  flex-wrap: nowrap;
  line-height: 45rpx;
  padding-left: 30rpx;
}
.right-left-view{
  width: 28rpx;
  height: 28rpx;
}
.right-left-view>image{
  width: 100%;
  height: 100%;
}
.set{
  font-size: 26rpx;
  padding-left: 20rpx;
}
.view-center{
  width: 90%;
  height: 300rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  background: #ffffff;
  margin-top: -50rpx;
  border: 1px #ffffff solid;
}
.image-img{
  width: 37rpx;
  height: 37rpx;
}
.view-top{
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  padding: 0 60rpx;
  margin-top: 50rpx;
}
.view-one{
  width: 90rpx;
  text-align: center;
}
.bottom-view{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-wrap: nowrap;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  padding: 30rpx 0;
  border-bottom:1px solid #DDDDDD ;
}
.bottom-img>image{
  width: 34rpx;
  height: 34rpx;
}
.bottom-imgs>image{
  width: 10rpx;
  height: 17rpx;
}