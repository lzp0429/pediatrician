/* pages/video/video.wxss */
.video{
  margin-top:20rpx ;
}
.video_item{
  width: 686rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  /* height: 200rpx; */
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
}
.video_item_left{
  width: 490rpx;
  height: 138rpx;
  display: flex;
  justify-content: flex-start;

}
.video_item_left>image{
  width: 193rpx;
  height: 138rpx;
  margin-right:20rpx ;

}
.video_item_left>view>view:nth-child(1){
  margin-top: 25rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.video_item_left>view>view:nth-child(2){
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  margin-top: 20rpx;

}
.video_item_rig{
  width: 80rpx;
  text-align: center;
  margin-top:30rpx ;
}
.video_item_rig>view>image{
  width: 48rpx;
  height: 48rpx;

}
.video_item_rig>view>view{

font-size: 20rpx;
font-family: PingFang SC;
font-weight: 500;
color: #4FA7FF;
}
