  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  padding-left:20rpx; 
}
.Close{
  text-align: right;
  position: fixed;
  top: 30rpx;
  right: 60rpx;
  z-index: 1000;
  width: 100%;
}
.colors{
  color:#4FA7FF;
}
.img{
  width: 272rpx;
  height: 226rpx;
  margin: 0 auto;
  margin-top: 30%;
}
.img>image{
  width: 100%;
  height: 100%;
}
.texts{
  text-align: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 80rpx;
}
.adname{
  position: absolute;
  top: 310rpx;
  width: 100%;
  background: rgba(6,10,46, 0.3);
  color: #ffffff;
  z-index: 20;
  font-size: 25rpx;
  line-height: 40rpx;
  padding-left: 30rpx;
} 
.top-fixed{
  position: fixed;
