/* pages/home/home.wxss */

.outer{
 padding:20rpx 30rpx 
}
.search{
  height: 60rpx;
  width: 690rpx;
  margin: 0 auto;
  background: #fff;
  border-radius:125rpx;
  line-height: 60rpx; 
  display: flex;
  justify-content: flex-start;
}
.search image{
  width: 35rpx;
  height: 35rpx;
  margin-top:14rpx;
  margin-left:20rpx; 
  margin-right:14rpx; 
}
.search view{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
swiper{
  height: 300rpx;
  margin: 20rpx auto; 
  margin-bottom:0; 
}
swiper-item{
 border-radius:20rpx ;
}
swiper image{
  width: 100%;
  height: 100%;
  border-radius:20rpx ;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .8);
}
.consult_class{
  
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}
.consult_class>view{
  height: 106rpx;
  width: 330rpx;
  background: #fff;
  margin-top:20rpx; 
  display: flex;
  justify-content: space-between;
}
.consult_class_text>view:nth-child(2){
  font-size: 16rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}

.consult_class_text{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  padding-top:25rpx; 
  padding-left:30rpx; 
  overflow: hidden;
  height: 106rpx;
  width:152rpx ;
  text-align: center;
}
.consult_class>view>image{
  height: 100rpx;
  width: 142rpx;
  margin-top:3rpx; 
}
.characteristic{
  margin-top:20rpx; 
  padding: 20rpx 20rpx;
  background: #fff;
  /* height: 240rpx; */
  border-radius:20rpx;
}
.characteristic_nav{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #4FA7FF;
  display: flex;
  justify-content: space-between;
}
.characteristic_nav>view{
  display: flex;
  justify-content: flex-start;
  
  
}
.characteristic_nav>view:nth-child(1)>image{
  width: 5rpx;
  height: 22rpx;
  margin-left: 10rpx;
  margin-top:5rpx;  
}
.characteristic_nav>view:nth-child(2){
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.characteristic_nav>view:nth-child(2)>image{
  width: 10rpx;
  height: 16rpx;
  margin-left: 10rpx;
  margin-top:6rpx;  
}

.characteristic_class{
  display: flex;
  justify-content: flex-start;
  margin-top:30rpx; 
}
.characteristic_class_item{
  /* height: 162rpx; */
  width: 144rpx;
  margin-left:25rpx; 
}
.characteristic_class_item>image{
  margin: 0 auto;
  width: 84rpx;
  height: 84rpx;
  position: relative;
  margin-left:30rpx; 
  margin-bottom:20rpx; 
}
.characteristic_img{
  margin: 0 auto;
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top:16rpx;
  left: 16rpx;
}
.characteristic_class_item>view{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.characteristic_class_item:nth-child(1){
  margin-left:0; 
}
.recommend{
  padding: 20rpx 0;
}
.recommend_item{
  /* height: 332rpx; */
  background: #FFFFFF;
  box-shadow: 0px 0px 29rpx 0px rgba(37, 168, 176, 0.1);
  border-radius: 16rpx;
  margin-top: 26rpx; 
  padding: 34rpx 28rpx 0 14rpx;
 
}
.recommend_item>view{
   display: flex;
  justify-content: space-between;
}
.recommend_item>view>image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.recommend_item>view>view{
  width: 510rpx;
  padding-top:6rpx; 
}
.recommend_item_nav{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.recommend_item_nav>view>text{
  color: #EF2626
}
.recommend_item_nav>view>view:nth-child(2){  
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.recommend_item_nav>view>view:nth-child(2)>text{
  color:#EF2626;
}
.recommend_item_btn{
  margin:20rpx 0;
  display: flex;
  justify-content: flex-start;
   
}
.recommend_item_btn>view{
  margin-right:15rpx; 
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 18rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #4FA7FF;
  background:  #4FA7FF;
  
  background: rgba(79, 167, 255, 0.3); 
  width: 122rpx;
}
.recommend_item_btn>view:nth-child(2){
  color: #EF2626;
  background: #EF2626;
  background: rgba(239, 38, 38, 0.3); 
  /* opacity: 0.5 */
}
.recommend_item_location{
  display: flex;
  justify-content: flex-start;
  height: 26rpx;
  line-height:26rpx; 
}
.recommend_item_location>image{
  width: 17rpx;
  height: 26rpx;
  margin-right:10rpx; 
}
.recommend_item_location>view{

  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;

}
.recommend_item_introductory{
  margin-top:27rpx;
  overflow: hidden;/*超出隐藏*/
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示x行*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical; 
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.recommend_item_price{
  margin-top:36rpx; 
  border-top: 2rpx solid #F7FAFF;
  height: 67rpx;
  background: #fff;
  padding: 17rpx 0 0 40rpx;
  display: flex;
  justify-content: space-between;
}
.recommend_item_price>view{
  display: flex;
  justify-content:flex-start;
}
.recommend_item_price>view>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 11rpx;
  margin-top:4rpx; 
}
.recommend_item_price_text{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.recommend_item_price_text>text{
  color: #EF2626
}
.recommend_item_price>view:nth-child(2){
  margin-left:20rpx; 
}

.handpick_item{
  padding: 22rpx 43rpx 28rpx 16rpx;
  display: flex;
  justify-content: space-between;
  /* height: 196rpx; */
  background: #FFFFFF;
  box-shadow: 0px 0px 29rpx 0px rgba(37, 168, 176, 0.1);
  border-radius: 16rpx;
  margin-top:20rpx; 
}
.handpick_item>image{
  width: 206rpx;
  height: 146rpx;
  margin-right:24rpx; 
}
.handpick_item>view{
  width: 432rpx;
  height: 146rpx;
}
.handpick_item_title{

  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;

  overflow: hidden;/*超出隐藏*/
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 1;  /*最多显示x行*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical; 
}
.handpick_item_content{
  
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
  overflow: hidden;/*超出隐藏*/
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 2;  /*最多显示x行*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical; 
  margin-top:3rpx;
  margin-bottom:12rpx;  
}
.handpick_item_time{
  
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;

}
.wx-swiper-dots {
  margin-bottom: 15rpx;
}